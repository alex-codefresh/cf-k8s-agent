// Codefresh Code Style - eslint ruleset
// Based on AirBnB.
//
// More details: https://codefresh-io.atlassian.net/wiki/display/COD/Code+Style+Guide
{
  "env": {
    "node": true,
    "mocha": true
  },
  "plugins": [
    "mocha"
  ],
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "max-len": [
      1,
      130
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1
      }
    ],
    "func-names": [
      "error",
      "never"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "no-else-return": "off",
    "arrow-body-style": "off",
    "strict": [
      "error",
      "global"
    ],
    "no-multi-spaces": "off",
    "padded-blocks": "off",
    "import/no-extraneous-dependencies": [
      2,
      {
        "devDependencies": true
      }
    ],
    "guard-for-in": "error",
    "no-console": "off",
    "no-plusplus": "off",
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "quote-props": [
      "error",
      "consistent"
    ],
    "class-methods-use-this": "off",
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true
      }
    ],
    "no-restricted-syntax": [
      "error",
      "WithStatement",
      "ForInStatement",
      "LabeledStatement"
    ],
    "no-unused-expressions": 0,
    "mocha/no-exclusive-tests": "error"
  }
}
